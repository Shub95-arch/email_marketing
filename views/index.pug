extends base

block content
        main
            h2.dash-title Overview
            .dash-cards
                .card-single
                    .card-body
                        span.ti-briefcase
                        div
                            h5 Account Balance
                            h4 #{user.emailLimit}
                    .card-footer
                        a(href='') View all
                .card-single
                    .card-body
                        span.ti-reload
                        div
                            h5 Expiration
                            -expirationDate = new Date(user.renewalDate);
                            -expirationDate.setDate(expirationDate.getDate() + user.durationDays);
                            h4=`${expirationDate}`
                    .card-footer
                        a(href='') View all
                .card-single
                    .card-body
                        span.ti-check-box
                        div
                            h5 Account Status
                            h4=`${new Date()>expirationDate?'Expired':'Active'}`
                    .card-footer
                        a(href='') View all
            section.recent
                .activity-grid
                    .activity-card
                        h3 Recent activity
                        .table-responsive
                            table
                                thead
                                    tr
                                        th Message
                                        th Sent On
                                        th To Mail
                                        th From Address
                                        th Mail Type
                                        th Status
                                tbody
                                    each log in user.logs
                                        tr
                                            td #{log.Body.substr(0,35)+'...'}
                                            td #{log.sentOn}
                                            td #{log.toMail}
                                            td #{log.fromEmail}
                                            td #{log.mailType}
                                            td
                                                -if (log.status==='success')
                                                    span.badge.success success
                                                -else 
                                                    span.badge.warning failed
                                                //- span.badge.success failed
                                    
                    .summary
                        .summary-card
                            .summary-single
                                span.ti-id-badge
                                div
                                    h5 #{logs.totalMailCount || 'No Data'}
                                    small Total Mails
                            .summary-single
                                span.ti-calendar
                                div
                                    h5 #{logs.spoofCount|| 'No Data'} : #{logs.smtpCount|| 'No Data'}
                                    small Spoof : Smtp 
                            .summary-single
                                span.ti-face-smile
                                div
                                    h5 #{logs.successCount|| 'No Data'} : #{logs.failedCount|| 'No Data'}
                                    small Success : Failed
                        .bday-card
                            .bday-flex
                                .bday-img
                                .bday-info
                                    h5 #{user.name.split(' ')[0]}
                                    small Mails sent Today
                            .text-center
                                button
                                    span.ti-gift
                                    |                     #{logs.todayCount|| 'No Data'} 
                                
            // Pagination Controls
        .pagination-box
            .pagination
                // Container for pagination buttons
                .pagination-buttons
                    // Previous Button
                    a.pagination-btn#prev-btn(href=`/activity?page=${prevPage}&limit=${limit}`) Previous

                    // Gap between buttons
                    span.pagination-gap

                    // Next Button
                    a.pagination-btn#next-btn(href=`/activity?page=${nextPage}&limit=${limit}`) Next
