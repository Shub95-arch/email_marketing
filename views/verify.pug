doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  <link rel="icon" href="img/logo.ico" type="image/icon type">
  title secureNET | Verification
  link(rel='stylesheet' href='style1.css')
main
  .box
    .inner-box
      .forms-wrap
        form.sign-otp-form
          .logo
            img(src='img/new_logo.png'  alt='secureNET')
            
          .heading
            h2 Verify Email
            h6 6 digit verification code sent on your email
          .actual-form
            .input-wrap
              input.input-field#code_verify(type='text' maxlength='6' placeholder='Verify Code' required='')
              //- label Veriy Code
            input.sign-btn#sign-btn(type='submit' value='Sign Up')
      .carousel
        .images-wrapper
          img.image.img-1.show(src='./img/image1.png' alt='')
          img.image.img-2(src='./img/image2.png' alt='')
          img.image.img-3(src='./img/image3.png' alt='')
        .text-slider
          .text-wrap
            .text-group
              h2 Effortless email campaigns
              h2 Power your outreach with precision
              h2 Your message, our mission
          .bullets
            span.active(data-value='1')
            span(data-value='2')
            span(data-value='3')
script( src='js/bundle.js')
